Language: Cpp
# BasedOnStyle:  LLVM
BreakBeforeBraces: Allman
TabWidth:        4 # 기본값 8
IndentWidth:     4 # 기본값 2
UseTab:          Never # 기본값 Never
AccessModifierOffset: -4 # 기본값 -2
ColumnLimit: 80
AllowShortFunctionsOnASingleLine: None

BraceWrapping:
  AfterClass: true
  AfterStruct: true
  BeforeElse: true
  AfterControlStatement: false
  SplitEmptyFunction: true
  SplitEmptyRecord: true
  SplitEmptyNamespace: true
